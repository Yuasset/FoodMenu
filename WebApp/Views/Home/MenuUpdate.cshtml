@model List<MenuItem>
@{
    ViewData["Title"] = "Menu Update";
}
<h1>Menu Update</h1>

<form asp-controller="Home" method="post">
    <table>
        @for(int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>
                    <input type="hidden" asp-for="@Model[i].ID" value="@Model[i].ID" />
                    <input type="hidden" asp-for="@Model[i].MenuID" value="@Model[i].MenuID" />
                    <label>@Model[i].Food.Name</label>
                    <select asp-for="@Model[i].FoodID" asp-items="@ViewBag.Items">
                        <option value="">-- Select a Category --</option>
                    </select>
                </th>
            </tr>
        }
        <tr>
            <td>
                <input type="submit" value="Update" />
            </td>
        </tr>
    </table>
</form>